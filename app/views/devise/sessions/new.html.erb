<div class="container">
  <div class="row">

    <div class="col-sm-6 mx-auto mt-5">
    <div class="form-signin text-center mt-4" >

    <a class=" mt-5" href="#"><%= image_tag "logo_readher.png", :class => "logo" %></a>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h4 class="mt-4 mb-2">Se connecter </h4>
        </br>

            <div class="field text-left">

              <%= f.email_field :email, :class => "form-control", autocomplete: "email", placeholder:"Email", :id =>"inputEmail"  %>
            </div>

            <div class="field text-left">
              </br>
              <%= f.password_field :password, :class => "form-control", autocomplete: "current-password",placeholder:"Password", :id =>"inputEmail"  %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="checkbox ml-0 mt-2 d-flex justify-content">

            <div class="field">

              <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </div>
              </div>
            <% end %>


            <div class="actions d-flex justify-content-center">
              <%= f.submit "Se connecter", :class => "btn  btn-dark mb-4", :id => "btn-signin-signup"  %>
            </div>
            <% end %>

          <%= render "devise/shared/links" %>
        </div>
     </div>


      </div>
    </div>
</div>
