<div class="container">
<div class="row">
<div class="col-sm-6 mx-auto mt-2">
<div class="form-signin text-center mt-4" >
<a class=" mt-3 mb-3" href="#"><%= image_tag "logo_readher.png", class: "logo" %></a>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h4 class="mt-5 mb-2">Mot de passe oublié? </h4>
  <br />
  <div class="field text-left mb-3">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class: "form-control", id:"inputEmail" %>
  </div>
  <br />
  <div class="actions d-flex justify-content-center mb-3">
    <%= f.submit "Recevoir le mail de réinitialisation du mot de passe" , class: "btn  btn-dark ", id: "btn-signin-signup" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
