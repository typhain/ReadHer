<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), :class => "btn-lg btn-dark", :id => "forgot_yr-pwd" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Créer un compte", new_registration_path(resource_name), :class => "btn-lg btn-dark", :id => "forgot_yr-pwd" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) , :class => " btn-lg btn-dark", :id => "forgot_yr-pwd" %> <br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Aucun e-mail reçu pour l'activation de votre compte ?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Aucun e-mail reçu pou déverouiller votre compte ?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Crée ton compte avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
