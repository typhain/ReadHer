                        </div>
                        <%= f.label :avatar %><br />
                        <div class="field  mb-3 p-3 border" id="inputEmail">
                          <%= f.file_field :avatar %>
                        </div>

                        <div class="field ">
                          <%= f.label :first_name, :class => "edit-form-text" %><br />
                          <%= f.text_field :first_name, :class => "form-control", :id =>"inputEmail",  autofocus: true, autocomplete: "email" %>
                        </div>

                        <div class="field">
                          <%= f.label :last_name ,  :class => "edit-form-text" %><br />
                          <%= f.text_field :last_name, :class => "form-control", :id =>"inputEmail", autofocus: true, autocomplete: "email" %>
                        </div>

                        <div class="field">
                          <%= f.label :city, :class => "edit-form-text" %><br />
                          <%= f.text_field :city, :class => "form-control", :id =>"inputEmail", autofocus: true, autocomplete: "email" %>
                        </div>

                        <div class="field">
                          <%= f.label :description , :class => "edit-form-text" %><br />
                          <%= f.text_area :description, :class => "form-control", :id =>"inputEmail", autofocus: true, autocomplete: "email" %>
                        </div>
                    </div>
                    <div class="col-md-6 p-4 mb-1">

                    <div class="field">
                      <%= f.label :email, :class => "edit-form-text"  %><br />
                      <%= f.email_field :email, :class => "form-control", :id =>"inputEmail", autofocus: true, autocomplete: "email" %>
                    </div>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>

                    <div class="field">
                      <%= f.label :password, :class => "edit-form-text"%> <div id="info">(leave blank if you donâ€™t want to change it)</div>
                      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :id =>"inputEmail" %>
                      <% if @minimum_password_length %>
                        <em id="info"><%= @minimum_password_length %> characters minimum  </em>
                      <% end %>
                    </div>

                    <div class="field">
                      <%= f.label :password_confirmation,  :class => "edit-form-text" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password",  :class => "form-control", :id =>"inputEmail"%>
                    </div>

                    <div class="field">
                      <%= f.label :current_password, :class => "edit-form-text" %> <br /><div id="info">(we need your current password to confirm your changes)</div>
                      <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control", :id =>"inputEmail" %>
                    </div>
                    </div>
                    </div>

                    <div class="actions ">
                          <%= f.submit "Update", class: "btn btn-dark", id: "btn_update_profile"%>
                    </div>
                  <% end %>
                  </div>
                  <hr>

                  </div>
                  <div class="row col-sm-10 mx-auto mt-2 d-flex justify-align-content-center">
                    <div class="card col-md-6 p-4 mb-1">

                  <h3 class="card-title">Cancel my account</h3>
                  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-dark", id: "get_library_btn_sm" %></p>
                 <%= link_to "Back", :back %>
      </div>  </div>
