<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
        <div class="form-signin text-center mt-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h4 class="pb-3 mb-3" id="keywords">Inscription</h4>
          <!-- Avatar and Active Storage config to hide -->
            <div>
              <% if resource.avatar.attached? %>
                <%= image_tag resource.avatar, disabled: true %>
              <% end %>
            </div>

          <div class="field text-left mb-3">

          <%= f.email_field :email, class: "form-control", placeholder:"Email", id:"inputEmail" , autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field text-left mb-3">
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, class: "form-control", placeholder:"Mot de passe", autocomplete: "new-password" , id:"inputEmail" %>
            <div class="minimum">(<%= @minimum_password_length %> caractères minimum)</div>
        </div>
        <div class="field text-left mb-3">

            <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirmation du mot de passe", autocomplete: "new-password" , id:"inputEmail" %>
          </div>
          <br/>
          <div class="actions d-flex justify-content-center mb-3">
            <%= f.submit "S’inscrire" , class: "btn btn-dark ", id: "btn-signin-signup"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
